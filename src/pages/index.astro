---
import CampCards from '$src/components/CampCards.astro';
import Layout from '$src/layouts/Layout.astro';
import { Image, getImage } from 'astro:assets';

import holding_img from '$src/assets/imgs/holding.webp';
import snapping_img from '$src/assets/imgs/snapping.webp';
import multibarhang_img from '$src/assets/imgs/multibarhang.webp';
import maybe_merch_img from '$src/assets/imgs/maybe_merch.webp';
import map_img from '$src/assets/imgs/map.webp';
import jazz_img from '$src/assets/imgs/jazz.jpg';

const maybe_merch = await getImage({ src: maybe_merch_img, format: 'webp', width: 700 });
---

<Layout>
	<header style="--bg-img: url('/imgs/holding.webp')" class="flex flex-col justify-end bg-pink-50">
		<div class="wrapper">
			<Image
				src={holding_img}
				width={1475}
				alt="Suzanne's Dance & Gymnastics"
				class="hero_img"
				loading="eager"
			/>
		</div>
	</header>

	<main class="grid md:grid-cols-12 gap-6 py-6 wrapper">
		<article id="class" class="card md:col-span-6 flex flex-col">
			<div
				class="after:content-[''] relative after:absolute after:top-0 after:left-0 after:w-full after:h-full after:bg-gradient-to-br from-pink-500/30 to-rose-300/50 after:bg-blend-multiply"
			>
				<Image
					width={750}
					quality={100}
					class="w-full object-cover object-center h-80 grayscale"
					src={jazz_img}
					alt="Two Girls Dancing"
				/>
			</div>

			<div class="p-4 text-center flex flex-[2] flex-col justify-center py-8 px-4">
				<h3 class="text-4xl font-black font-fancy">Classes</h3>
				<a
					href="/classes"
					title="Learn More About Available Classes."
					class="btn mx-auto mt-6 flex items-center gap-2">Learn More</a
				>
			</div>
		</article>
		<article id="bus" class="card md:col-span-6 flex flex-col">
			<div
				class="after:content-[''] relative after:absolute after:top-0 after:left-0 after:w-full after:h-full after:bg-gradient-to-br from-pink-500/30 to-sky-500/50 after:bg-blend-multiply"
			>
				<Image
					width={750}
					quality={100}
					class="w-full object-cover object-center h-80 grayscale"
					src={multibarhang_img}
					alt="Kids hanging on a bar"
					loading="lazy"
				/>
			</div>

			<div class="p-4 text-center flex flex-[2] flex-col justify-center py-8 px-4">
				<h3 class="text-4xl font-black font-fancy">Jumpin' Jitney</h3>
				<a
					href="/jumpin-jitney"
					title="Learn More About The Jumpin' Jitney."
					class="btn mx-auto bg-sky-500 hover:bg-sky-100 hover:text-sky-600 border-sky-500 mt-6 flex items-center gap-2"
					>Learn More
				</a>
			</div>
		</article>

		<article
			class="card col-span-full px-4 py-6 md:flex justify-between items-center bg-gradient-to-b from-violet-200 to-violet-100 flex-wrap"
		>
			<h2 class="font-bold text-3xl text-center md:text-left">
				ðŸŽˆ<span
					class="gradient_text bg-gradient-to-br from-purple-500 to-rose-400 font-fancy font-black"
					>Suzanne's Does Parties Too!</span
				> ðŸŽ‰
			</h2>
			<a
				href="/parties"
				class="btn bg-purple-400 border-purple-400 hover:bg-purple-100 hover:text-purple-600 mt-5 mx-auto md:m-0"
				title="Learn More About Parties at Suzanne's.">Learn More</a
			>
		</article>

		<CampCards classes={['md:col-span-4']} />

		<article
			class="card bg-cover bg-no-repeat bg-center flex justify-center items-center relative aspect-square md:aspect-auto @container md:col-span-6"
			style={`background-image: url(${maybe_merch.src});`}
		>
			<div class="w-fit">
				<h3
					class="spray_gradient gradient_text text-center text-5xl @sm:text-6xl font-fancy font-black"
				>
					Merch
				</h3>
				<a href="/merch" class="btn mt-5" title="View Available Merch.">View Merch</a>
			</div>
		</article>

		<atricle class="card flex flex-col md:col-span-6" id="map">
			<a
				href="https://www.google.com/maps/place/Suzanne's+Dance+%26+Gymnastic's/@40.3509668,-76.3997132,18z/data=!4m2!3m1!1s0x89c6030624df1d39:0xce5d55a8063d8861"
				target="__blank"
				class="flex-grow-0 flex-shrink w-full"
				title="See Us On Google Maps."
			>
				<Image
					class="w-full object-cover object-center block max-h-52"
					src={map_img}
					width={750}
					alt="Map"
					loading="lazy"
				/>
			</a>
			<div class="p-4 text-center flex flex-col justify-center flex-1 py-8 px-4">
				<h3 class="text-4xl font-black font-fancy">Find Us</h3>
				<a
					href="tel:7172722159"
					class="text-lg mb-2 mt-4 mx-auto w-fit"
					title="Call Suzanne's Dance & Gymnastics."
					aria-label="7 1 7. 2 7 2. 2 1 5 9.">(717) 272-2159</a
				>
				<address class="md:text-lg">717 N 8th Ave, Lebanon PA 17042</address>
				<a
					href="https://www.google.com/maps/place/Suzanne's+Dance+%26+Gymnastic's/@40.3509668,-76.3997132,18z/data=!4m2!3m1!1s0x89c6030624df1d39:0xce5d55a8063d8861"
					target="_blank"
					title="Open Google Maps."
					class="btn mx-auto bg-emerald-500 hover:bg-emerald-100 hover:text-emerald-600 border-emerald-500 mt-12 flex items-center gap-2"
					>Open Google Maps
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="20"
						height="20"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
						class="lucide lucide-external-link"
						><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline
							points="15 3 21 3 21 9"></polyline><line x1="10" x2="21" y1="14" y2="3"></line></svg
					>
				</a>
			</div>
		</atricle>

		<div class="col-span-full contact_gradient px-4 py-12 sm:p-12 text-rose-400">
			<div class="mx-auto max-w-4xl">
				<h2 class="text-4xl md:text-5xl xl:text-6xl backdrop-blur-3xl mb-4 font-fancy font-black">
					Send Us A Message
				</h2>
				<p class="mb-10">
					You should hear back in a few hours to a few days depending on time of year.
				</p>
			</div>
			<form
				action="https://formspree.io/f/meqbqldv"
				method="post"
				class="grid lg:grid-cols-2 gap-8 mx-auto max-w-4xl"
			>
				<div class="input col-span-full">
					<label for="name">Name<span class="text-red-500">*</span></label>
					<input type="text" placeholder="Your Name" id="name" name="name" required />
				</div>

				<div class="input">
					<label for="email">Email<span class="text-red-500">*</span></label>
					<input type="email" placeholder="Your Email" id="email" name="email" required />
				</div>

				<div class="input">
					<label for="phone">Phone #</label>
					<input type="tel" placeholder="Your Phone Number" id="phone" name="phone" />
				</div>

				<div class="input col-span-full">
					<label for="message">Message<span class="text-red-500">*</span></label>
					<textarea
						name="message"
						id="message"
						cols="30"
						rows="10"
						required
						placeholder="Your Message"></textarea>
				</div>

				<div class="lg:col-span-full flex justify-end">
					<button
						type="submit"
						title="Send Message."
						class="btn w-full bg-rose-400 border-rose-400 hover:bg-rose-50 hover:text-rose-500 sm:w-fit text-center justify-center items-center gap-2"
						>Send
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="18"
							height="18"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="lucide lucide-send"
							><line x1="22" x2="11" y1="2" y2="13"></line><polygon
								points="22 2 15 22 11 13 2 9 22 2"></polygon></svg
						>
					</button>
				</div>
			</form>
		</div>
	</main>
</Layout>

<style is:inline>
	.main-ctas {
		a {
			.icon {
				width: 200px;
				max-width: 100%;
				margin: 0 auto;
				aspect-ratio: 1/1;
				border-radius: 100px;
				border: solid 4px currentColor;
				display: block;
				display: flex;
				justify-content: center;
				align-items: center;

				svg {
					transition: scale 300ms;
				}
			}

			&:hover {
				.icon {
					@apply bg-white/30;
					svg {
						scale: 1.2;
					}
				}
			}
		}
	}
</style>
