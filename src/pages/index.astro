---
import CampCards from '$src/components/CampCards.astro';
import Layout from '$src/layouts/Layout.astro';
import dates from '$src/dates.json';
---

<Layout>
	<header style="--bg-img: url('/imgs/snapping.webp')" class="hero flex flex-col justify-end">
		<div class="w-full bg-pink-400/75 backdrop-blur-lg py-6">
			<div class="wrapper grid grid-cols-3 gap-8 text-white main-ctas">
				<a href="/jumpin-jitney">
					<span class="icon">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="100"
							height="100"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="lucide lucide-bus"
							><path
								d="M19 17h2l.64-2.54c.24-.959.24-1.962 0-2.92l-1.07-4.27A3 3 0 0 0 17.66 5H4a2 2 0 0 0-2 2v10h2"
							></path><path d="M14 17H9"></path><circle cx="6.5" cy="17.5" r="2.5"></circle><circle
								cx="16.5"
								cy="17.5"
								r="2.5"></circle></svg
						>
					</span>
					<span class="text-center text-2xl block mt-5 font-bold">Jumpin' Jitney</span>
				</a>
				<a href="/classes">
					<span class="icon">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="100"
							height="100"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="lucide lucide-person-standing"
							><circle cx="12" cy="5" r="1"></circle><path d="m9 20 3-6 3 6"></path><path
								d="m6 8 6 2 6-2"></path><path d="M12 10v4"></path></svg
						>
					</span>
					<span class="text-center text-2xl block mt-5 font-bold">Classes</span>
				</a>
				<a href="/parties">
					<span class="icon">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="100px"
							height="100px"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="lucide lucide-cake"
							><path d="M20 21v-8a2 2 0 0 0-2-2H6a2 2 0 0 0-2 2v8"></path><path
								d="M4 16s.5-1 2-1 2.5 2 4 2 2.5-2 4-2 2.5 2 4 2 2-1 2-1"></path><path d="M2 21h20"
							></path><path d="M7 8v2"></path><path d="M12 8v2"></path><path d="M17 8v2"
							></path><path d="M7 4h.01"></path><path d="M12 4h.01"></path><path d="M17 4h.01"
							></path></svg
						>
					</span>
					<span class="text-center text-2xl block mt-5 font-bold">Parties</span>
				</a>
			</div>
		</div>
	</header>
	<main class="">
		<section id="camp_dates" class="py-9 lg:py-32 bg-pink-50">
			<h2 class="text-center text-4xl font-bold mb-8">{dates.year} Camp Dates</h2>
			<CampCards />
		</section>
	</main>
</Layout>

<style>
	.main-ctas {
		a {
			.icon {
				width: 200px;
				max-width: 100%;
				margin: 0 auto;
				aspect-ratio: 1/1;
				border-radius: theme('borderRadius.full');
				border: solid 4px currentColor;
				display: block;
				display: flex;
				justify-content: center;
				align-items: center;

				svg {
					transition: scale 300ms;
				}
			}

			&:hover {
				.icon {
					@apply bg-white/30;
					svg {
						scale: 1.2;
					}
				}
			}
		}
	}
</style>
