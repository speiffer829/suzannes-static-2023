---
import Layout from '$src/layouts/Layout.astro';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
const blog_entries = await getCollection('posts');

import fosse_img from '$src/assets/imgs/fosse.jpg';
---

<Layout title="Blog">
	<div class="wrapper">
		<header class="wrapper">
			<Image
				src={fosse_img}
				width={2000}
				alt="Dog looking at some blog posts"
				class="hero_img"
				loading="eager"
			/>

			<h1
				class="page_title gradient_text bg-gradient-to-r from-amber-500 via-fuchsia-500 to-cyan-400"
			>
				Posts
			</h1>
		</header>
		<ul class="max-w-3xl mx-auto my-14">
			{
				blog_entries.map((entry) => (
					<li class="my-5 bg-white shadow-lg rounded-xl p-5 flex gap-5">
						{entry.data.featured_img && (
							<Image
								src={entry.data.featured_img}
								width={150}
								alt={entry.data.title}
								className="aspect-video object-cover rounded-lg shadow-md"
							/>
						)}
						<div>
							<h2 class="font-fancy font-bold text-3xl">{entry.data.title}</h2>
							<p class="text-gray-500">{entry.data.date}</p>
							<a
								class="text-pink-500 flex gap-1 items-center group hover:text-rose-400 underline mt-4"
								href={`/posts/${entry.slug}`}
							>
								Read This Post
								<svg
									class="transition-all duration-300 group-hover:translate-x-2"
									xmlns="http://www.w3.org/2000/svg"
									width="18"
									height="18"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round"
									class="lucide lucide-arrow-right"
								>
									<>
										<path d="M5 12h14" />
										<path d="m12 5 7 7-7 7" />
									</>
								</svg>
							</a>
						</div>
					</li>
				))
			}
		</ul>
	</div>
</Layout>
